<!--
    The InfraredSigal Profile defines two roles.
    The first, a Transmitter, implements the InfraredSignal Service.
    The second, any number of Controllers, doesn't implement any services.
-->
<Profile BluetoothType="com.kayac.profile.InfraredSignal"
         BluetoothUUID="0x000000">
  <Roles>
    <Role Name="Transmitter">
      <Instances>
        <ExactlyN>1</ExactlyN>
      </Instances>
      <Services>
        <Service Name="InfraredSignal"
                 BluetoothType="com.kayac.service.InfraredSignal"
                 BluetoothUUID="0x195AE58A437A489BB0CD-B7C9C394BAE4"
                 Mandatory="true" />
      </Services>
    </Role>
    <Role Name="Controller">
      <Instances>
        <OneOrMore/>
      </Instances>
      <Services />
    </Role>
  </Roles>
</Profile>
